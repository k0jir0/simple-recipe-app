<!DOCTYPE html>
<html>

<head>
    <title>Recipes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="/js/recipes.js" defer></script>
</head>

<body>
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Recipes</h1>
            <a href="/recipes/new" class="btn btn-dark">Create Recipe</a>
        </div>


        <div class="row">
            <% recipes.forEach(recipe=> { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="<%= recipe.image %>" class="card-img-top" alt="<%= recipe.name %>">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= recipe.name %>
                                    <% if (recipe.isFavourite) { %>
                                        <span class="badge bg-warning text-dark">â˜… Favourite</span>
                                        <% } %>
                            </h5>
                            <p class="card-text">
                                <%= recipe.description %>
                            </p>
                            <a href="/recipes/<%= recipe._id %>" class="btn btn-outline-dark btn-sm">View</a>
                            <button onclick="deleteRecipe('<%= recipe._id %>')"
                                class="btn btn-outline-danger btn-sm">Delete</button>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
</body>

</html>